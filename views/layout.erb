            <li data-nav='registry'><a href="/registry"><span>registry</span></a></li>
            <li><a href="/pics"><span class="pics">#meetthesudols <i class="fa fa-instagram"></i></span></a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>

    <%= yield %>

    <div id="footer">
      <div class="container">
        <p class="text-muted text-center"><i class='fa fa-heart-o'></i></p>
      </div>
    </div>

    <script src="/js/bootstrap.min.js"></script>
